---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

function formatDate(date: Date): string {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title="Home">
  <section>
    <h1 class="text-2xl font-bold mb-8">記事一覧</h1>

    {posts.length === 0 ? (
      <p class="text-gray-500">まだ記事がありません。</p>
    ) : (
      <ul class="space-y-6">
        {posts.map((post) => (
          <li class="border-b border-gray-100 pb-6 last:border-0">
            <a
              href={`/daily-commit/posts/${post.slug}/`}
              class="block group"
            >
              <time class="text-sm text-gray-500" datetime={post.data.date.toISOString()}>
                {formatDate(post.data.date)}
              </time>
              <h2 class="text-lg font-medium mt-1 group-hover:text-blue-600">
                {post.data.title}
              </h2>
              {post.data.description && (
                <p class="text-gray-600 text-sm mt-2">
                  {post.data.description}
                </p>
              )}
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>
