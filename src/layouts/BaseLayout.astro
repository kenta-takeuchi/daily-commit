---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '日々の学びと気づきを綴るブログ' } = Astro.props;
const siteTitle = 'Daily Commit';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/daily-commit/favicon.svg" />
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-gray-200">
      <nav class="max-w-2xl mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/daily-commit/" class="text-xl font-bold text-gray-900 hover:text-gray-600">
            Daily Commit
          </a>
          <div class="flex gap-6 text-sm">
            <a href="/daily-commit/" class="text-gray-600 hover:text-gray-900">
              記事一覧
            </a>
            <a href="/daily-commit/about/" class="text-gray-600 hover:text-gray-900">
              About
            </a>
            <a href="/daily-commit/search/" class="text-gray-600 hover:text-gray-900">
              検索
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1 max-w-2xl mx-auto px-4 py-8 w-full">
      <slot />
    </main>

    <footer class="border-t border-gray-200">
      <div class="max-w-2xl mx-auto px-4 py-6 text-center text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} Daily Commit. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
